------------------------------------------------------------------------------
Functional form is allowed for arguments, as well as nesting them.
------------------------------------------------------------------------------
{{if(c, 1, 2)}}
{{c|if(1, 2)}}
{{a|join(",")}}
{{a|join("\"")}}
{{a|join(b)}}
{{a|join(if(c,"+","-"))}}
{{a|join(if(d,"+","-"))}}
{{join(a, if(d, "+", "-"))}}
------------------------------------------------------------------------------
{"a":[1,2],"b":"-","c":true,"d":false}
------------------------------------------------------------------------------
1
1
1,2
1"2
1-2
1+2
1-2
1-2
